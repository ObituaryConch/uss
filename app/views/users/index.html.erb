<div class="row">
  <div class="col-md-8 col-md-offset-2">
    <h1 class="text-center">Ultimate Sim Sports Community</h1>
<p class="text-center">Welcome to the Ultimate Sim Sports community. Users must fill out a profile in order to be visible in the community.</p>
    <ul class="list-unstyled">
      <% @users.each do |user| %>
        <% if user.profile %>
        <li>
          <div class="well row <%= cycle('white-bg', '') %>">
            <div class="col-sm-4 text-center">
              <% if user.profile.avatar %>
                <%= link_to user do %>
                  <%= image_tag user.profile.avatar.url(:thumb), class: 'user-index-avatar' %>
                <% end %>
              <% end %>
            </div>
            <div>
              <%= link_to user do %>
                <h2><%= user.profile.username %></h2>
              <% end %>
              <p><%= user.profile.favorite_sport_level %> <%= user.profile.favorite_team %><% if user.plan_id == 2 %>
    <span class="label label-danger">PRO</span>
  <% end %></p>
            </div>
          </div>
        </li>
        <% end %>
      <% end %>
    </ul>
  </div>
</div>